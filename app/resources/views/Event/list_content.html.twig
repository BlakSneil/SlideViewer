<table class="table table-striped table-hover table-bordered knp-table">
    <thead>
    <tr>
        <th class="unclickable"></th>
        <th><i class="fa fa-sort{% if pagination.isSorted('e.name') %}{{ pagination.direction == 'desc' ? '-desc' : '-asc' }}{% endif %}"></i> {{ knp_pagination_sortable(pagination, 'Name', 'e.name') }}</th>
        <th><i class="fa fa-sort{% if pagination.isSorted('e.description') %}{{ pagination.direction == 'desc' ? '-desc' : '-asc' }}{% endif %}"></i> {{ knp_pagination_sortable(pagination, 'Description', 'e.description') }}</th>
        <th><i class="fa fa-sort{% if pagination.isSorted('e.dateFrom') %}{{ pagination.direction == 'desc' ? '-desc' : '-asc' }}{% endif %}"></i> {{ knp_pagination_sortable(pagination, 'Date From', 'e.dateFrom') }}</th>
        <th><i class="fa fa-sort{% if pagination.isSorted('e.dateTo') %}{{ pagination.direction == 'desc' ? '-desc' : '-asc' }}{% endif %}"></i> {{ knp_pagination_sortable(pagination, 'Date To', 'e.dateTo') }}</th>
        <th><i class="fa fa-sort{% if pagination.isSorted('e.locality') %}{{ pagination.direction == 'desc' ? '-desc' : '-asc' }}{% endif %}"></i> {{ knp_pagination_sortable(pagination, 'Locality', 'e.locality') }}</th>
    </tr>
    </thead>
    <tbody>
        {% for c in pagination %}
            <tr>
                <td>
                    <a href="{{ path("admin_event_edit", {'id': c.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></a>
                </td>
                <td>{{ c.name }}</td>
                <td>{{ c.description }}</td>
                <td>{{ c.dateFrom|date('d.m.Y') }}</td>
                <td>{{ c.dateTo|date('d.m.Y') }}</td>
                <td>{{ c.locality }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="knp-paginator text-right">
    {{ knp_pagination_render(pagination) }}
</div>
