{% extends 'Member/base.html.twig' %}

{% block content %}

<h4>Member: {{ name }}</h4>

<br>

<div class="nav-tab-container">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#member-data" id="member-data-tab" role="tab" data-toggle="tab" aria-controls="member-data" aria-expanded="true">Member Data</a></li>
        <li role="presentation"><a href="#partecipation" role="tab" id="partecipation-tab" data-toggle="tab" aria-controls="profile">Presenze</a></li>
    </ul>
</div>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="member-data" aria-labelledby="home-tab">

        <div class="row">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="col-md-4">
                <div class="col-md-12">
                    <img src="{{ asset('bundles/app/img/avatar.jpg') }}" alt="..." class="img-thumbnail" style="width: 100%; height: 100px">
                </div>
                <div class="col-md-12">
                    {{ form_row(form.pathPhoto) }}
                </div>
            </div>

            <div class="col-md-8">

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.surname) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.birthday) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.streetName) }}
                    </div>
                    <div class="col-md-2">
                        {{ form_row(form.streetNumber) }}
                    </div>
                    <div class="col-md-2">
                        {{ form_row(form.zipCode) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.locality) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.telephoneNumber) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.cellularNumber) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.school) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        {{ form_row(form.cell) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.color) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.isActive) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.liveYear) }}
                    </div>
                </div>

                {{ form_row(form.notes) }}
                {{ form_rest(form) }}

                <br>

                <input type="submit" class="btn btn-success" value="Save" />

            </div>

            {{ form_end(form) }}
        </div>
    </div>
    
    <div role="tabpanel" class="tab-pane fade" id="partecipation" aria-labelledby="partecipation-tab">
        <p>Presenze</p>
    </div>
</div>

{% endblock content %}
