    <link href="{{ asset('components/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/footer.css') }}" rel="stylesheet" />
